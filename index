    <script>
        // Modal functionality
        const loginBtn = document.getElementById('loginBtn');
        const signupBtn = document.getElementById('signupBtn');
        const loginModal = document.getElementById('loginModal');
        const signupModal = document.getElementById('signupModal');
        const closeLoginModal = document.getElementById('closeLoginModal');
        const closeSignupModal = document.getElementById('closeSignupModal');
        const switchToLogin = document.getElementById('switchToLogin');
        
        loginBtn.addEventListener('click', () => {
            loginModal.classList.remove('hidden');
        });
        
        signupBtn.addEventListener('click', () => {
            signupModal.classList.remove('hidden');
        });
        
        closeLoginModal.addEventListener('click', () => {
            loginModal.classList.add('hidden');
        });
        
        closeSignupModal.addEventListener('click', () => {
            signupModal.classList.add('hidden');
        });
        
        switchToLogin.addEventListener('click', () => {
            signupModal.classList.add('hidden');
            loginModal.classList.remove('hidden');
        });

        // Create Course button functionality
        const createCourseBtn = document.getElementById('createCourseBtn');
        createCourseBtn.addEventListener('click', () => {
            // Check if user is logged in (this would be more complex in a real app)
            const isLoggedIn = false; // Simulate not logged in
            
            if (!isLoggedIn) {
                signupModal.classList.remove('hidden');
            } else {
                // Redirect to course creation page
                console.log('Redirect to course creation');
            }
        });

        // Explore Catalog button functionality
        const exploreCatalogBtn = document.getElementById('exploreCatalogBtn');
        exploreCatalogBtn.addEventListener('click', () => {
            // Scroll to featured courses section
            document.querySelector('.py-16.bg-white').scrollIntoView({ 
                behavior: 'smooth' 
            });
        });
    </script>
